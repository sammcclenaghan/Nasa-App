# syntax=docker/dockerfile:1
# Development Dockerfile for nasa_app

ARG RUBY_VERSION=3.4.1
FROM docker.io/library/ruby:$RUBY_VERSION-slim AS base

# Rails app lives here
WORKDIR /rails

# Install base packages
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y \
      curl \
      default-mysql-client \
      libjemalloc2 \
      libvips \
      nodejs \
      npm \
      python3 \
      python3-pip \
      python3-venv \
      build-essential \
      default-libmysqlclient-dev \
      git \
      libyaml-dev \
      pkg-config \
      python3-dev && \
    npm install --global yarn && \
    rm -rf /var/lib/apt/lists /var/cache/apt/archives

# Set development environment
ENV RAILS_ENV="development" \
    BUNDLE_PATH="/usr/local/bundle" \
    BUNDLE_WITHOUT=""

# Install application gems
COPY Gemfile Gemfile.lock requirements.txt ./
RUN bundle install

# Install Python dependencies into a project virtual environment
RUN python3 -m venv /rails/.venv && \
    /rails/.venv/bin/pip install --no-cache-dir --upgrade pip && \
    /rails/.venv/bin/pip install --no-cache-dir -r requirements.txt

# Copy application code
COPY . .

# Set Python path
ENV PYTHON_BIN="/rails/.venv/bin/python" \
    PATH="/rails/.venv/bin:${PATH}"

# Install JavaScript dependencies
RUN yarn install

# Create necessary directories
RUN mkdir -p tmp/pids && \
    mkdir -p log && \
    mkdir -p storage

# Expose port
EXPOSE 3000

# Default command
CMD ["./bin/dev"]
